<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sagar_custom_form.sagar_custom_action_form_data_source</item>
        </item>
        <item name="label" translate="true" xsi:type="string">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Sagar\Custom\Block\Adminhtml\Edit\BackButton" name="back"/>
            <button class="Sagar\Custom\Block\Adminhtml\Edit\SaveButton" name="save"/>
            <button class="Sagar\Custom\Block\Adminhtml\Edit\DeleteButton" name="delete"/>
        </buttons>
        <namespace>sagar_custom_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>sagar_custom_form.sagar_custom_action_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sagar_custom_action_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Sagar\Custom\Model\Ui\DataProvider" name="sagar_custom_action_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>custom_entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="member">
        <settings>
            <label>General</label>
        </settings>
        <field name="custom_entity_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">member</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>custom_entity_id</dataScope>
            </settings>
        </field>
        <field name="uuid" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">member</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Uuid</label>
                <dataScope>uuid</dataScope>
            </settings>
        </field>
        <field name="property_type_id" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
