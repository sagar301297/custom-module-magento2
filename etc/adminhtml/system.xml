<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="sagar_tabs" translate="label" sortOrder="300">
            <label>Sagar</label>
        </tab>
        <section id="sagardata" translate="label" type="text" sortOrder="1009" showInDefault="1" showInWebsite="1" showInStore="1">
